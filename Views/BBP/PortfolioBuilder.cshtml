@{ ViewData["Title"] = "Portfolio Builder";
    ViewData["PageName"] = "bbp_portfoliobuilder";
    ViewData["Heading"] = "<i class='fal fa-chart-bar'></i> &nbsp;Portfolio Builder";
    ViewData["Category1"] = "BBP";
    ViewData["PageDescription"] = "Self Directed Crypto Retirement Accounts"; }
@section HeadBlock {}
<div class="fs-lg fw-300 p-5 bg-white border-faded rounded mb-g">

    @Html.Raw(ViewBag.CryptoCurrencyIndex)
    <br />

    Portfolio Builder Annual ROI:   <span ToolTip="The estimated annual Return on your staked BiblePay.">@ViewBag.DWU</span>
    <br />
    Sanctuary (Masternode) Gross Annual ROI:     <span ToolTip="The estimated annual Return on your sanctuary.">@ViewBag.SanctuaryGrossROI</span>
    <br />
    Turnkey Sanctuary Annual Net ROI:     <span ToolTip="The estimated annual Return on your turnkey sanctuary.">@ViewBag.TurnkeySanctuaryNetROI</span>

    <br />
    <!--
    Sanctuary (Masternode) Net Annual ROI:     <span ToolTip="The estimated annual Return on your sanctuary.">@ViewBag.SanctuaryNetROI</span>
    <br />
    Turnkey Sanctuary Annual Net ROI:     <span ToolTip="The estimated annual Return on your turnkey sanctuary.">@ViewBag.TurnkeySanctuaryNetROI</span>

    <br />
    -->
    Masternode Initial Investment: <span ToolTip="The initial investment cost to create a sanctuary.">@ViewBag.SanctuaryCost</span>
    <br />
    Masternode Count: <span ToolTip="The number of masternodes running on the network">@ViewBag.SanctuaryCount</span>
    <br />

    <br />

    <!-- Portfolio builder Add Section -->
    <div class="fs-lg fw-300 p-5 bg-white border-faded rounded mb-g">
        To add a Non-ERC-20 (Native) foreign position to your portfolio, populate the following fields and click Add:
        <br />
        <br />
        Coin Symbol:
        <br />
        <select id='ddSymbol' class="form-control">
            @Html.Raw(ViewBag.ddSymbol);
        </select>
        <br />
        Foreign Address:
        <br />
        <input id='txtAddress' class="form-control" onkeyup="DoCallback('portfoliobuilder_pinchange');" value='@ViewBag.txtAddress' />
        <br />

        <div data-toggle="tooltip" data-placement="left" title="Ensure your foreign amount ends in this pin (see the wiki below for more info).">
        <span>Your Pin:</span>
        <br />
        <input id='txtPin' readonly class="form-control" value='' />
        </div>

        <br />


        <button class="btn btn-info ml-auto btn-default" id='btnAdd' onclick="DoCallback('portfoliobuilder_add');">Add</button>

    </div>
    <br />



    NOTE:<br />
    <br />
    To enable portfolio builder for your core biblepay wallet, please follow these instructions:
    <br />
    <br />
    <a href="https://wiki.biblepay.org/Portfolio_Builder_2.0">Portfolio Builder Guide</a>
    <br />

    <br />


</div>
@section ScriptsBlock {
}
