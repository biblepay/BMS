<div class="info-card">
	<img src="@ViewBag.BioURL" class="profile-image rounded-circle" alt="@ViewBag.NickName">
	<div class="info-card-text">
		<a href="#" class="d-flex align-items-center text-white">
            <span class="text-truncate text-truncate-sm d-inline-block">
                @ViewBag.NickName
            </span>
		</a>
		<span class="d-inline-block text-truncate text-truncate-sm">@ViewBag.Balance BBP</span>
	</div>
	<img src="~/img/card-backgrounds/cover-5-lg.png" class="cover" alt="cover">
	<a href="#" onclick="return false;" class="pull-trigger-btn" data-action="toggle" data-class="list-filter-active" data-target=".page-sidebar" data-focus="nav_filter_input">
		<i class="@(Settings.Theme.IconPrefix) fa-angle-down"></i>
	</a>
</div>